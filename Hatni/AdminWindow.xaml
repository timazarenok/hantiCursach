<Window x:Class="Hatni.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hatni"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="Tables" Content="Столы" Width="200" Height="30" FontSize="18" Click="Tables_Click"/>
            <Button x:Name="Events" Content="Мероприятия" Width="200" Height="30" FontSize="18" Click="Events_Click"/>
            <Button x:Name="Reviews" Content="Отзывы" Width="200" Height="30" FontSize="18" Click="Reviews_Click"/>
            <Button x:Name="Bron" Content="Бронь" Width="200" Height="30" FontSize="18" Click="Bron_Click"/>
            <Button x:Name="Products" Content="Продукты" Width="200" Height="30" FontSize="18" Click="Products_Click"/>
        </StackPanel>
        <Button x:Name="Exit" Width="120" Height="25" Content="Выход" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,10" Click="Exit_Click"/>
    </Grid>
</Window>
